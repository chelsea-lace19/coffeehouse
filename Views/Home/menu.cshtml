@model List<Product>

@{
    ViewData["Title"] = "menu2";
}

<h1>All Menu Items</h1>

<head>
    <style>
        body {
            background-color: #b8ad77;
        }
        a{
            color:black;
            font-weight:bold;
        }
        h4{
            text-decoration-line:underline;
            

        }
        .text-div {
            background-image: linear-gradient(to right, #000 10%, rgba(255, 255, 255, 0) 0%);
            background-position: 0 14px;
            background-size: 10px 1px;
            background-repeat: repeat-x;
            width: 100%;
            height: 25px;
        }

        .text-span {
            background: #b8ad77;
            padding-right: 10px
        }

        .pull-right {
            float: right;
            padding-left: 10px
        }


    </style>

</head>
<body>
    <div class="panel-group" id="accordion1">

        <div class="panel panel-default">
            <div class="panel-heading">
                <h4 class="panel-title">
                    <a data-toggle="collapse" data-parent="#accordion1" href="#collapseOne">
                        Hot Coffee
                    </a>
                </h4>
            </div>
            <div id="collapseOne" class="panel-collapse collapse">
                <div class="panel-body">

                    @foreach (Product prod in Model)
                    {
                        if (prod.category == "Hot Coffee")
                        {
                            <div class="panel-body">
                                <div class="panel-group" id="accordion21">
                                    <div class="panel">
                                        <a class="text-span" data-toggle="collapse" data-parent="#accordion21" href="#collapse@(prod.id)">
                                            <!--This href and the below id need to change everytime so when you click on a Model link they don't all expand in the group.-->
                                            <span class="text-span">@prod.name</span> <span class="text-span pull-right">$@prod.price</span> 
                                        </a>
                                        <div id="collapse@(prod.id)" class="panel-collapse collapse">
                                            <div class="panel-body">@prod.description </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>


        <div class="panel panel-default">
            <div class="panel-heading">
                <h4 class="panel-title">
                    <a data-toggle="collapse" data-parent="#accordion1" href="#collapseTwo">
                        Hot Tea
                    </a>
                </h4>
            </div>
            <div id="collapseTwo" class="panel-collapse collapse">
                <div class="panel-body">

                    @foreach (Product prod in Model)
                    {
                        if (prod.category == "Hot Tea")
                        {
                            <div class="panel-body">
                                <div class="panel-group" id="accordion22">
                                    <div class="panel">
                                        <a data-toggle="collapse" data-parent="#accordion22" href="#collapse@(prod.id)">
                                            <span class="text-span">@prod.name</span> <span class="text-span pull-right">$@prod.price</span>
                                        </a>
                                        <div id="collapse@(prod.id)" class="panel-collapse collapse">
                                            <div class="panel-body">@prod.description </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>

    </div>


    <div class="panel panel-default">
        <div class="panel-heading">
            <h4 class="panel-title">
                <a data-toggle="collapse" data-parent="#accordion1" href="#collapseThree">
                    Cold Coffee
                </a>
            </h4>
        </div>
        <div id="collapseThree" class="panel-collapse collapse">
            <div class="panel-body">

                @foreach (Product prod in Model)
                {
                    if (prod.category == "Cold Coffee")
                    {
                        <div class="panel-body">
                            <div class="panel-group" id="accordion23">
                                <div class="panel">
                                    <a data-toggle="collapse" data-parent="#accordion23" href="#collapse@(prod.id)">
                                        <span class="text-span">@prod.name</span> <span class="text-span pull-right">$@prod.price</span>
                                    </a>
                                    <div id="collapse@(prod.id)" class="panel-collapse collapse">
                                        <div class="panel-body">@prod.description </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>
        </div>
    </div>

    <div class="panel panel-default">
        <div class="panel-heading">
            <h4 class="panel-title">
                <a data-toggle="collapse" data-parent="#accordion1" href="#collapseFour">
                    Iced Tea
                </a>
            </h4>
        </div>
        <div id="collapseFour" class="panel-collapse collapse">
            <div class="panel-body">

                @foreach (Product prod in Model)
                {
                    if (prod.category == "Iced Tea")
                    {
                        <div class="panel-body">
